{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@localLibs/update-data": [
        "libs/update-data/src"
      ],
      "@localLibs/update-data/*": [
        "libs/update-data/src/*"
      ]
    }
  }
}